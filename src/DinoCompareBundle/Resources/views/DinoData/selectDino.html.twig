    <form method="post" action="{{ path('compare') }}">
        <div id="firstDinoSelect">
            <p>Wybierz dinozaura nr 1</p>
            <select name="firstDinosaur">
                {% if firstDino is not null %}
                    <option value="{{ firstDino.id }}">
