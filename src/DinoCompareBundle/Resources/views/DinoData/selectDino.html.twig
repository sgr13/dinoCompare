                        </option>
                    {% endfor %}
                {% endif %}
            </select>
            <a href="{{ path('graphic', {'id':1}) }}">Szukaj dinozaura...</a>
            {% if firstDino.webPath is defined %}
                <div>
                    <img src="{{ firstDino.webPath }}" width="240" height="160">
                </div>
            {% endif %}
        </div>
        <div id="seconDinoSelect">
            <p>Wybierz dinozaura nr 2</p>
            <select name="secondDinosaur">
                {% if secondDino is not null %}
                    <option value="{{ secondDino.id }}">
                        {{ secondDino.name }}
                    </option>
                {% else %}
                    {% for dino in dinos %}
                        <option value="{{ dino.id }}">
                            {{ dino.name }}
                        </option>
                    {% endfor %}
                {% endif %}
            </select>
            <a href="{{ path('graphic', {'id':2}) }}">Szukaj dinozaura...</a>
