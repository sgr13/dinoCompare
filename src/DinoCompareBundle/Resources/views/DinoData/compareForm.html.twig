{% extends "::base.html.twig" %}

{% block title %}Porównywarka Dinozaurów{% endblock %}

{% block body %}
<div class="col-md-12"><h1 style="text-align: center">Porównywarka Dinozaurów</h1></div>
    <table id="dinoTable" class="col-md-12">
        <th>{{ dino.name }}</th><th>Kategoria:</th><th>{{ dino1.name }}</th>
        <tr >
            <td class="dinoPhoto"><img src="{{ dino.webPath }}" width="250" height="200"></td>
            <td></td>

            <td class="dinoPhoto"><img src="{{ dino1.webPath }}" width="250" height="200"></td>
        </tr>

{#---------------------------------------------------------------------------------------------------#}

        <tr id="weight">
            <td class="firstDinoRow">
                {% set mediana = (((dino.weight + dino1.weight) / 1000)|round(0, 'ceil')) * 1000 %}
                {% set graphicPresentation = (dino.weight * 100) / mediana %}
               <div style="padding-bottom: 10px; font-size: 25px">{{ dino.weight }} kg.</div>
                <div class="progress">
                    <div class="progress-bar progress-bar-striped" role="progressbar" aria-valuenow="70"
                         aria-valuemin="0" aria-valuemax="100" style="width:{{ graphicPresentation }}%">
                    </div>
                </div>
                {% block progressBar %}
                {{ parent() }}
            </td>
            <td>Waga</td>
            {% set graphicPresentation = (dino1.weight * 100) / mediana %}
            <td>
                <div style="padding-bottom: 10px; font-size: 25px">{{ dino1.weight }} kg.</div>
                <div class="progress">
                    <div class="progress-bar progress-bar-striped" role="progressbar" aria-valuenow="70"
                         aria-valuemin="0" aria-valuemax="100" style="width:{{ graphicPresentation }}%">
                        <span class="sr-only">70% Complete</span>
                    </div>
                </div>
                    {{ parent() }}
            </td>
        </tr>

{#---------------------------------------------------------------------------------------------------#}


        <tr id="lenght">
            <td class="firstDinoRow">
                {% set mediana = (((dino.lenght + dino1.lenght) / 2)|round(0, 'ceil'))*2 %}
                {% set graphicPresentation = (dino.lenght * 100) / mediana %}

                <div style="padding-bottom: 10px; font-size: 25px">{{ dino.lenght }} m.</div>
                <div class="progress">
                    <div class="progress-bar progress-bar-striped" role="progressbar" aria-valuenow="70"
                         aria-valuemin="0" aria-valuemax="100" style="width:{{ graphicPresentation }}%">
                    </div>
                </div>
                {{ parent() }}
            </td>
            <td>Długość</td>
            {% set graphicPresentation = (dino1.lenght * 100) / mediana %}
            <td>
                <div style="padding-bottom: 10px; font-size: 25px">{{ dino1.lenght }} m.</div>
                <div class="progress">
                    <div class="progress-bar progress-bar-striped" role="progressbar" aria-valuenow="70"
                         aria-valuemin="0" aria-valuemax="100" style="width:{{ graphicPresentation }}%">
                    </div>
                </div>
                {{ parent() }}
            </td>
        </tr>

{#---------------------------------------------------------------------------------------------------#}

        <tr id="height">
            <td class="firstDinoRow">
                {% set mediana = (((dino.height + dino1.height) / 2)|round(0, 'ceil'))*2 %}
                {% set graphicPresentation = (dino.height * 100) / mediana %}
                <div style="padding-bottom: 10px; font-size: 25px">{{ dino.height }} m.</div>
                <div class="progress">
                    <div class="progress-bar progress-bar-striped" role="progressbar" aria-valuenow="70"
                         aria-valuemin="0" aria-valuemax="100" style="width:{{ graphicPresentation }}%">
                    </div>
                </div>
                {{ parent() }}
            </td>
            <td>Wysokość</td>
            {% set graphicPresentation = (dino1.height * 100) / mediana %}
            <td>
                <div style="padding-bottom: 10px; font-size: 25px">{{ dino1.height }} m.</div>
                <div class="progress">
                    <div class="progress-bar progress-bar-striped" role="progressbar" aria-valuenow="70"
                         aria-valuemin="0" aria-valuemax="100" style="width:{{ graphicPresentation }}%">
                    </div>
                </div>
                {{ parent() }}
            </td>
        </tr>
        <tr>
            <td class="firstDinoRow">
                <div style="padding-bottom: 10px; font-size: 25px">{{dino.discoverYear}} r.</div>
            </td>
            <td>Rok odkrycia</td>
            <td>
                <div style="padding-bottom: 10px; font-size: 25px">{{dino1.discoverYear}} r.</div>
            </td>
        </tr>
        <tr>
            <td class="firstDinoRow">
                <div style="padding-bottom: 10px; font-size: 25px">{{dino.foodType.name}}</div>
            </td>
            <td>Typ</td>
            <td>
                <div style="padding-bottom: 10px; font-size: 25px">{{dino1.foodType.name}}</div>
            </td>
        </tr>
        <tr>
            <td class="firstDinoRow">
                <div style="padding-bottom: 10px; font-size: 25px">{{dino.period.name}}</div>
            </td>
            <td>Okres</td>
            <td>
                <div style="padding-bottom: 10px; font-size: 25px">{{dino1.period.name}}</div>
            </td>
        </tr>
        <tr>
            <td class="firstDinoRow">
                <div style="padding-bottom: 10px; font-size: 25px">{{dino.dinoOrder.name}}</div>
            </td>
            <td>Rząd</td>
            <td>
                <div style="padding-bottom: 10px; font-size: 25px">{{dino1.dinoOrder.name}}</div>
            </td>
        </tr>
        <tr>
            <td class="firstDinoRow">
                <div style="padding-bottom: 10px; font-size: 25px">{{dino.dinoSuborder.name}}</div>
            </td>
            <td>Podrząd</td>
            <td>
                <div style="padding-bottom: 10px; font-size: 25px">{{dino1.dinoSuborder.name}}</div>
            </td>
        </tr>
    </table>
                {% endblock %}
{% endblock %}
